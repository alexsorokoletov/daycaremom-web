---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
// import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/lora/index.css";
import '@fontsource-variable/bricolage-grotesque';



export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Your Daycare Mom"
  : "Maria - your Daycare Mom";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="My name is Maria, and I run a daycare with over 10 years of experience working with babies, toddlers, and kids. Iâ€™m passionate about helping parents make life with children easier and more stress-free. Using my knowledge, I share practical advice that makes parenting more enjoyable."
      canonical={canonicalURL}
      twitter={{
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Maria - your Daycare Mom`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Maria - your Daycare Mom",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
      body {
        background: rgb(255, 246, 239)
      }
    </style>
  </body>
</html>
