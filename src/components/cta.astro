---
import Link from "./ui/link.astro";
import mixpanel from "../utils/mixpanel";
---

<div
  class="bg-customMint p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center font-sans">
  <h2 class="text-black text-4xl md:text-6xl tracking-tight">
    Parent with Confidence.
  </h2>
  <p class="text-black mt-4 text-lg md:text-xl">
    Get expert-backed strategies and practical tips to create stress-free routines and handle challenges with ease.
  </p>
  <div class="flex mt-5">
    <Link href="https://your.daycare.mom/guides" target="_blank" style="cta" class="second-cta-button">Get the guides</Link>
  </div>
</div>


<script>
  const button = document.querySelector(".second-cta-button");
  button?.addEventListener("click", () => {
    try {      
      fbq("track", "ViewContent");
    } catch {
      console.log("track failed");
    }
    try {
      mixpanel.track("Click", { Destination: "all-guides" });
    } catch {
      console.log("track mix failed");
    }
    return true;
  });
</script>