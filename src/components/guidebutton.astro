---
import Link from "@components/ui/link.astro";

const { guide } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-xl font-medium text-black">{guide.description}</h4>
      <div class="flex mt-8">
      <Link
        href={guide.button.link || "#"}
        block
        style={guide.popular ? "cta" : "outline"}>
        {guide.name || "Get Started"}
      </Link>
    </div>
  </div>
</div>
